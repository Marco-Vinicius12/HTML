<body>
    <center>
    <h2>Nome</h2>
    <input type="text" id="nome">
    <h3 id="mensagem"></h3>
    
    <h2>Celular</h2>
    <input type="tel" id="telefone">
    <h3 id="telefoneInfo"></h3>

    <h2>Email</h2>
    <input type="email" id="email">
    <h3 id="emailInfo"></h3>
    <button onclick="MostrarMensagem()">Enviar</button>
